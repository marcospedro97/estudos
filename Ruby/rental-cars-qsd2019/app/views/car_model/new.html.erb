<h1>Novo Modelo</h1>

<% if @car_model.errors.any? %>
  <p>VocÃª corrigir os seguintes erros para continuar:</p>

  <% @car_model.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @car_model, url:'/car_model'  do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :year, 'Ano' %>
  <%= f.text_field :year %>
  <br />
  <%= f.label :motorization, 'Cavalos' %>
  <%= f.text_field :motorization %>
  <br />
  <%= f.label :Manufacturer, 'Fabricante'%>
  <%= f.select :Manufacturer, @manufacturers.collect{ |manufacturer| [manufacturer.name] } %>
  <br />
  <%= f.label :fuel_type, 'Combustivel' %>
  <%= f.text_field :fuel_type %>
  <br />
  <%= f.label :CarCategory, 'Fabricante'%>
  <%= f.select :CarCategory, @car_categories.collect{ |car_category| [car_category.name] } %>
  <br />
  <%= f.submit 'Enviar' %>
<% end %>